<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:animateLayoutChanges="true"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <com.fynd.artoolkit.common.CameraSourcePreview
        android:id="@+id/firePreview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <com.fynd.artoolkit.common.GraphicOverlay
            android:id="@+id/fireFaceOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"/>
    </com.fynd.artoolkit.common.CameraSourcePreview>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/seekbar"
        android:layout_above="@+id/shade_mode"
        >
        <com.warkiz.widget.IndicatorSeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:isb_max="100"
            app:isb_min="-1.0"
            app:isb_progress="1"
            app:isb_seek_smoothly="true"
            app:isb_show_tick_marks_type="oval"
            app:isb_tick_marks_size="13dp"
            android:id="@+id/seekBar2"
            app:isb_show_tick_texts="true"
            app:isb_tick_texts_size="15sp"
            app:isb_tick_texts_color="@color/beauty_orange"
            app:isb_thumb_color="@color/beauty_orange"
            app:isb_thumb_size="20dp"
            app:isb_show_indicator="rounded_rectangle"
            app:isb_indicator_color="@color/beauty_orange"
            app:isb_indicator_text_color="@color/colorAccent"
            app:isb_indicator_text_size="18sp"
            app:isb_track_background_color="@color/beauty_orange"
            app:isb_track_background_size="2dp"
            app:isb_track_progress_color="@color/beauty_orange"
            app:isb_track_progress_size="4dp"
            app:isb_only_thumb_draggable="false"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/black_de"
        android:orientation="horizontal"
        android:layout_above="@id/listMode"
        android:id="@+id/Mode"
        android:visibility="gone"
        android:weightSum= "4"
        android:baselineAligned="false">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1">

            <ToggleButton
                android:id="@+id/Eyeliner"
                android:layout_width="37dp"
                android:layout_height="37dp"

                android:background="@drawable/eyeliner_toggle"

                android:padding="10dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                />
        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ToggleButton
                android:id="@+id/blush_icon"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:padding="6dp"
                android:layout_gravity="center"
                android:background="@drawable/toggle_selector"
                />
        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ToggleButton
                android:id="@+id/lipstick_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:padding="6dp"
                android:checked="true"
                android:background="@drawable/lipstick_toggle"

                />
        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ToggleButton
                android:id="@+id/eyeshadow_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/eyeshadow_toggle"
                android:padding="6dp"

                />

        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:layout_above="@id/listMode"
        android:id="@+id/shade_mode"
        android:background="@color/black_de"
        android:visibility="visible">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvShade"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:visibility="visible" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/black_de"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:id="@+id/listMode"
        android:layout_alignParentBottom="true"
        android:weightSum= "3"
        android:baselineAligned="false">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/facingSwitch"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="0dp"


                android:padding="0dp"
                android:src="@drawable/switchcamera" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ToggleButton
                android:id="@+id/mode_icon"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:background="@drawable/mode_toggle"
                android:padding="6dp"

                android:src="@drawable/mode4" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/shade_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/btn_capture_options"
                android:src="@drawable/shade_icon"
                />
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>

